<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="Balint-Jeszenszky" id="1">
        <createTable tableName="advertisement">
            <column name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="user_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="expiration" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="initial_price" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createSequence schemaName="public" startValue="1" incrementBy="1" sequenceName="bid_seq"/>

        <createTable tableName="bid">
            <column name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="user_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="advertisement_id" type="INTEGER">
                <constraints nullable="false" references="advertisement(id)" foreignKeyName="fk_bid_advertisement"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
