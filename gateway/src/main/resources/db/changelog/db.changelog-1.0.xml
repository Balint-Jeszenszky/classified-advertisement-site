<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="Balint-Jeszenszky" id="1">
        <createTable tableName="refresh_token_seq">
            <column name="next_val" type="INTEGER">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createSequence schemaName="public" startValue="1" incrementBy="1" sequenceName="refresh_token_seq"/>

        <createTable tableName="refresh_token">
            <column name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="token_hash" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="expiration" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
