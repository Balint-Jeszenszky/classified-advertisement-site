FROM eclipse-temurin:17-jdk-alpine
ARG ADVERTISEMENT_SERVICE_URI
ENV ADVERTISEMENT_SERVICE_URI $ADVERTISEMENT_SERVICE_URI
ARG DATABASE_URL
ENV DATABASE_URL $DATABASE_URL
ARG DB_PASS
ENV DB_PASS $DB_PASS
ARG DB_USER
ENV DB_USER $DB_USER
ARG JWT_EXPIRATION
ENV JWT_EXPIRATION $JWT_EXPIRATION
ARG JWT_REFRESH_EXPIRATION
ENV JWT_REFRESH_EXPIRATION $JWT_REFRESH_EXPIRATION
ARG JWT_REFRESH_SECRET
ENV JWT_REFRESH_SECRET $JWT_REFRESH_SECRET
ARG JWT_SECRET
ENV JWT_SECRET $JWT_SECRET
ARG PORT
ENV PORT $PORT
ARG USER_SERVICE_URI
ENV USER_SERVICE_URI $USER_SERVICE_URI
ARG IMAGE_SERVICE_URI
ENV IMAGE_SERVICE_URI $IMAGE_SERVICE_URI
ARG FRONTEND_URI
ENV FRONTEND_URI $FRONTEND_URI
COPY target/*.jar app.jar
ENTRYPOINT ["java","-jar","/app.jar"]
