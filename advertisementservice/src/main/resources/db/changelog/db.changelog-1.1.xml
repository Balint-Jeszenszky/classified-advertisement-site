<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="Balint-Jeszenszky" id="2">
        <createTable tableName="comment_seq">
            <column name="next_val" type="INTEGER">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <insert tableName="comment_seq">
            <column name="next_val" value="1"></column>
        </insert>

        <createSequence schemaName="public" startValue="1" incrementBy="1" sequenceName="comment_seq"/>

        <createTable tableName="comment">
            <column name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="content" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="creator_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="advertisement_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
