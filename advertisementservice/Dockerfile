FROM eclipse-temurin:17-jdk-alpine
ARG DATABASE_URL
ENV DATABASE_URL $DATABASE_URL
ARG DB_PASS
ENV DB_PASS $DB_PASS
ARG DB_USER
ENV DB_USER $DB_USER
ARG MINIO_PASS
ENV MINIO_PASS $MINIO_PASS
ARG MINIO_URL
ENV MINIO_URL $MINIO_URL
ARG MINIO_USER
ENV MINIO_USER $MINIO_USER
ARG PORT
ENV PORT $PORT
COPY build/libs/*.jar app.jar
ENTRYPOINT ["java","-jar","/app.jar"]
